{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "prestart": "babel-node buildScripts/startmessage.js",
    "start": "npm-run-all --parallel security-check open:src tslint:watch test:watch start-mockapi",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.*  src  buildScripts",
    "lint:watch": "npm run lint -- --watch",
    "tslint": "tslint src/**/*.ts src/**/*.tsx",
    "tslint:watch": "onchange \"src/**/*.ts\" \"src/**/*.tsx\" -- npm run tslint",
    "security-check": "nsp check",
    "share": "npm-run-all --parallel open:src localtunnel",
    "localtunnel": "lt --port 3000",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist tslint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "copy-to-common-resources": "babel-node buildScripts/copyDistToCommonResources.js"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "jquery": "3.1.1",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "toastr": "2.1.2"
  },
  "devDependencies": {
    "@types/jquery": "2.0.40",
    "@types/react": "15.0.14",
    "@types/react-dom": "0.14.23",
    "@types/toastr": "2.1.32",
    "awesome-typescript-loader": "^3.1.2",
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "chalk": "1.1.3",
    "cheerio": "0.22.0",
    "compression": "1.6.2",
    "cross-env": "3.1.3",
    "css-loader": "0.26.2",
    "eslint": "3.8.1",
    "eslint-plugin-import": "2.0.1",
    "eslint-watch": "2.1.14",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "2.0.0",
    "html-webpack-plugin": "2.22.0",
    "html-webpack-processing-plugin": "0.1.2",
    "jsdom": "9.8.0",
    "json-schema-faker": "0.3.6",
    "json-server": "0.8.22",
    "localtunnel": "1.8.1",
    "mocha": "3.1.2",
    "ncp": "2.0.0",
    "nock": "8.1.0",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "numeral": "1.5.3",
    "onchange": "3.2.1",
    "open": "0.0.5",
    "react-hot-loader": "3.0.0-beta.6",
    "rimraf": "2.5.4",
    "style-loader": "0.13.2",
    "ts-loader": "2.0.1",
    "tslint": "4.5.1",
    "typescript": "2.2.1",
    "webpack": "2.2.1",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.17.1",
    "webpack-md5-hash": "0.0.5"
  }
}
